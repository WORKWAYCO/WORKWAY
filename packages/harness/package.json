{
  "name": "@workwayco/harness",
  "version": "0.1.0",
  "description": "Autonomous agent harness for WORKWAY. Multi-session project execution with checkpoints and human steering.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "workway-harness": "./bin/workway-harness.js"
  },
  "files": [
    "dist",
    "bin",
    "templates"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts src/cli.ts --format esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@workwayco/beads": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "marked": "^12.0.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^1.6.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": {
    "name": "WORKWAY",
    "url": "https://workway.co"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/workwayco/workway.git",
    "directory": "packages/harness"
  },
  "keywords": [
    "workway",
    "harness",
    "agent",
    "autonomous",
    "claude-code",
    "ai",
    "workflow",
    "orchestration",
    "zuhandenheit"
  ]
}
