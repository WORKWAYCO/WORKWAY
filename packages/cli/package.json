{
  "name": "@workwayco/cli",
  "version": "0.3.5",
  "description": "WORKWAY CLI - Build, test, and publish workflows and integrations",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "workway": "./bin/workway.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts --format esm --dts --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "open": "^10.1.0",
    "zod": "^3.23.8",
    "inquirer": "^9.2.0",
    "axios": "^1.6.0",
    "fs-extra": "^11.2.0",
    "express": "^4.18.0",
    "@workwayco/sdk": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/inquirer": "^9.0.0",
    "@types/fs-extra": "^11.0.0",
    "@types/express": "^4.17.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": {
    "name": "WORKWAY",
    "url": "https://workway.co"
