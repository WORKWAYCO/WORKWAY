{
  "name": "@workway/construction-mcp",
  "version": "0.1.0",
  "description": "The Automation Layer - AI-native workflow automation for construction",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "migrate:local": "wrangler d1 migrations apply workway-construction --local",
    "migrate:remote": "wrangler d1 migrations apply workway-construction --remote"
  },
  "dependencies": {
    "@cloudflare/workers-oauth-provider": "^0.0.5",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@workway/mcp-core": "workspace:*",
    "hono": "^4.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240512.0",
    "typescript": "^5.4.0",
    "vitest": "^1.5.0",
    "wrangler": "^3.114.17"
  }
}
